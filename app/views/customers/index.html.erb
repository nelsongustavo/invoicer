<p id="notice"><%= notice %></p>

<h2>Lista de clientes</h2>
<div class="row">
  <table class="striped">
    <thead>
      <tr>
        <th data-field="enrolment">Matricula</th>
        <th data-field="name">Nome</th>
        <th data-field="cpf">CPF</th>
        <th data-field="email">Email</th>
        <th data-field="Address">Endere√ßo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.enrolment %></td>
          <td><%= customer.name %></td>
          <td><%= customer.cpf %></td>
          <td><%= customer.email %></td>
          <td><%= customer.address %></td>
          <td><%= link_to 'Mostrar', customer %></td>
          <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
          <td><%= link_to 'Excluir', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

